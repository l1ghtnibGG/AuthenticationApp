<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='@Url.Content("~/bootstrap/css/bootstrap.min.css")' rel="stylesheet">
    <script src="@Url.Content("~/bootstrap/js/bootstrap.min.js")"></script>
    <title>AuthenticationApp</title>
</head>
<body>
    @RenderBody()
    <script>
        document.getElementById('selectAll')
            .addEventListener('click', function (e) {
                var els = document.querySelectorAll('input[name=userId]');

                Array.prototype.forEach.call(els, function (cb) {
                    cb.checked = e.target.checked;
                });
            });
    </script>
</body>
</html>
